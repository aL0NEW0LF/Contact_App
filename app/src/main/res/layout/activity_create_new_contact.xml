<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CreateNewContact"
    android:layout_margin="5dp"
    android:background="@color/white"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_margin="35dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:src="@drawable/user">
            </ImageView>
            <!--edit text for user name-->
            <RelativeLayout
                android:layout_width="283dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:id="@+id/UserSmallIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user_1" />

                <EditText
                    android:id="@+id/idName"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="11dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="5dp"
                    android:hint="Name"
                    android:inputType="text" />

            </RelativeLayout>

            <!--edit text for user phone number-->
            <!--edit text for user email-->
            <!--button for saving a new contact-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/PhoneSmallIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:src="@drawable/phone" />

                <EditText
                    android:id="@+id/idPhoneNumber"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="11dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="5dp"
                    android:hint="Phone"
                    android:inputType="phone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/EmailSmallIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:src="@drawable/envelope" />

                <EditText
                    android:id="@+id/idEmail"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="11dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="5dp"
                    android:hint="Email"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/JobSmallIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:src="@drawable/job" />

                <EditText
                    android:id="@+id/idJob"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="11dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="5dp"
                    android:hint="Job"
                    android:inputType="text" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idBtnAddContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bleu4"
                    android:fontFamily="@font/montserrat"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/idbutcancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bleu4"
                    android:fontFamily="@font/montserrat"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:cornerRadius="20dp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>